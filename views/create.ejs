    <link rel="stylesheet" href="css/web.css">
    <link rel="stylesheet" href="css/create.css">
    <link href="https://fonts.googleapis.com/css?family=Material+Icons|Material+Icons+Outlined" rel="stylesheet">
</head>
<body>
    <header class="header">
        <a href="/" class="logo" >
            <img src="../pic/Logo.png" alt=""></a>
        
   

        <nav class="navigation">
            
            <a href="/">Home</a>
            <a href="/manu">Manu</a>
            <%if (!loggedIn){%>
                
                <a href="/login_or_register" class="btnlogin-popup">Login</a>
            <%}%>
            <%if (loggedIn){%>
                
                    <!-- <a href="/profile"> <%= UserData.Username%> </a>
